{
  "ConnectionStrings": {

    "DefaultConnection": "Server=localhost;database=AjaxExpenseTrackerDB;port=5432;User Id=postgres; password=abcd123!;Integrated Security=True"

  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.PostgreSQL.Configuration" ], // THIS IS IMPORTANT
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithExceptionDetails",
      "WithDemystifiedStackTraces"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "DefaultConnection",
          "tableName": "\"Logs\"",
          "needAutoCreateTable": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Serilogs\\AppLogs.log",
          "retainedFileCountLimit": "30"
        }
      }
    ]
  },
  "Columns": {
    "\"Message\"": "RenderedMessageColumnWriter",
    "\"MessageTemplate\"": "MessageTemplateColumnWriter",
    "\"Level\"": {
      "Name": "LevelColumnWriter",
      "Args": {
        "renderAsText": true,
        "dbType": "Varchar"
      }
    },
    "\"TimeStamp\"": "TimestampColumnWriter",
    "\"Exception\"": "ExceptionColumnWriter",
    "\"Properties\"": "LogEventSerializedColumnWriter",
    "\"PropsTest\"": {
      "Name": "PropertiesColumnWriter",
      "Args": {
        "dbType": "Json"
      }
    }
  }
}